{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "../out",
        "lib": [
            "es6",
            "es2017"
        ],
        "rootDir": "..",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "removeComments": true
    },
    "include": [
        "../src/**/*",
        "../test/**/*"
    ],
    "exclude": [
        "../test/_workspace"
    ]
}
