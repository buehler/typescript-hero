{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "../out",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es2017"
    ],
    "rootDir": "../",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "removeComments": true
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../src/_old"
  ]
}
